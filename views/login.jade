extends layout 

block content
  .login
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        form(method='POST' action='./login' name='registration')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log in 
  script(src='http://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js')
  script(src='../javascripts/form-validation.js')